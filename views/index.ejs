<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <form action="/search" method="GET" style="display: flex; align-items: center;">
        <input type="text" name="search" placeholder="Search for a user's name here"/ style="margin: 0px">
        <button type="submit">Search</button>
    </form>
  <h1><%= title %></h1>
  <ul>
    <% if (locals.users) {%>
      <% users.forEach(user => { %>
        <li>
          ID: <%= user.id %>, Name: <%= user.firstName %> <%= user.lastName %>
          <a href="/<%= user.id %>/update">Edit</a>
          <form action="/<%= user.id %>/delete" method="POST" class="form-delete">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this user?')";>Delete</button>
          </form>
        </li>
      <% }); %>
    <% } %>
  </ul>
  <a href="/create">Create a user</a>
</body>
</html>
